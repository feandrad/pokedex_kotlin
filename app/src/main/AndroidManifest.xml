<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.felipeandrade.pokedex">

    <application
        android:name=".application.PokeDexApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_meowth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_meowth_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon,android:allowBackup">

        <activity android:name=".menu.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".search.PokeSearchActivity" />

        <activity android:name=".about.PokeAboutActivity" />

        <activity android:name=".course.PokeCourseActivity" />


    </application>


</manifest>



