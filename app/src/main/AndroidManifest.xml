<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.felipeandrade.pokedex">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name=".PokeDexApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_meowth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_meowth_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">


        <activity
            android:name=".ui.menu.PokeMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.search.PokeSearchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.about.PokeAboutActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.course.PokeCourseActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>



